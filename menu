let cardioButton, strengthButton;
let cardioDropdown, strengthDropdown;
let showCardio = false;
let showStrength = false;

function setup() {
  createCanvas(1000, 1000);
  drawGradient();
  textFont('Arial Black');
  textAlign(CENTER);
  textSize(48); 
  fill(0);
  text('Select Your Workout', width / 2, 150);  


  cardioButton = createButton('Cardio');
  cardioButton.position(width / 2 - 75, 300);  
  cardioButton.size(200, 60);  
  cardioButton.style('font-size', '24px');  
  cardioButton.mousePressed(toggleCardioDropdown);

  strengthButton = createButton('Strength');
  strengthButton.position(width / 2 - 75, 400); 
  strengthButton.size(200, 60);  
  strengthButton.style('font-size', '24px');  
  strengthButton.mousePressed(toggleStrengthDropdown);

  cardioDropdown = createSelect();
  cardioDropdown.position(width / 2 - 75, 300);  
  cardioDropdown.option('Select a Cardio Workout');
  cardioDropdown.option('2KM Run');
  cardioDropdown.option('Jumping Jacks');
  cardioDropdown.hide();  
  // Create the dropdown for strength workouts (but hide it initially)
  strengthDropdown = createSelect();
  strengthDropdown.position(width / 2 - 75, 400);  // Dropdown appears right on the Strength button
  strengthDropdown.option('Select a Strength Workout');
  strengthDropdown.option('1-min Push-Ups');
  strengthDropdown.option('1-min Planks');
  strengthDropdown.hide();  // Hide the dropdown initially
}

function draw() {
  // The menu remains static; nothing to animate in draw yet
  // If dropdown is being shown, animate it into position smoothly
  if (showCardio) {
    cardioDropdown.show();
    cardioDropdown.position(width / 2 - 75, 300);  // Stay directly on the Cardio button
  } else {
    cardioDropdown.hide();
  }

  if (showStrength) {
    strengthDropdown.show();
    strengthDropdown.position(width / 2 - 75, 400);  // Stay directly on the Strength button
  } else {
    strengthDropdown.hide();
  }
}

// Function to create the gradient background
function drawGradient() {
  for (let i = 0; i <= height; i++) {
    let inter = map(i, 0, height, 0, 1);
    let c = lerpColor(color(173, 216, 230), color(138, 43, 226), inter); // Light blue to purple gradient
    stroke(c);
    line(0, i, width, i);
  }
}

// Toggle the display of the Cardio dropdown
function toggleCardioDropdown() {
  showCardio = !showCardio;
  if (showCardio) {
    showStrength = false; // Hide strength dropdown if cardio is being shown
  }
}

// Toggle the display of the Strength dropdown
function toggleStrengthDropdown() {
  showStrength = !showStrength;
  if (showStrength) {
    showCardio = false; // Hide cardio dropdown if strength is being shown
  }
}
